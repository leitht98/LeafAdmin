<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPesticide">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/enterNameMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter pesticide name:"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/enterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test pesticide"
                app:layout_constraintTop_toBottomOf="@+id/enterNameMessage"/>

            <TextView
                android:id="@+id/enterRP1Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Regression Parameter 1:"
                app:layout_constraintTop_toBottomOf="@id/enterName"/>

            <EditText
                android:id="@+id/enterRP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                app:layout_constraintTop_toBottomOf="@+id/enterRP1Message"/>

            <TextView
                android:id="@+id/enterRP2Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Regression Parameter 2:"
                app:layout_constraintTop_toBottomOf="@id/enterRP1"/>

            <EditText
                android:id="@+id/enterRP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3000"
                app:layout_constraintTop_toBottomOf="@+id/enterRP2Message"/>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                app:layout_constraintTop_toBottomOf="@id/enterRP2"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>